{
  "name": "supomation-core",
  "version": "0.1.0",
  "description": "supomation core",
  "license": "MIT",
  "repository": "patevs/supomation",
  "author": "PatEvs",
  "engines": {
    "node": ">=8"
  },
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "prelint": "prettier --check --write src/**/*.js && echo. && echo Prettier Completed!",
    "lint": "eslint --fix src/**/*.js && echo Lint Completed!",
    "test": "jest && echo. && echo Test Complete!"
  },
  "ntl": {
    "descriptions": {
      "clean": "Deletes node_modules and docs directories. Requires trash-cli to be installed globally",
      "start": "Start Supomation CLI",
      "prettier": "Run prettier check style linting",
      "lint": "Run eslint check style linting",
      "test": "Run Supomation tests",
      "docs": "Generate project documentation"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "boxen": "^5.0.1",
    "chalk": "^4.1.1",
    "cheerio": "^1.0.0-rc.9",
    "clear": "^0.1.0",
    "enquirer": "^2.3.6",
    "listr": "^0.14.3",
    "rxjs": "^7.0.1"
  },
  "devDependencies": {
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "prettier": "^2.3.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true
  }
}
